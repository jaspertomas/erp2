    <th>Barcode</th>
    <th>Is service</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.brand_id %></td>
    <td><%= product.producttype_id %></td>
    <td><%= product.qty %></td>
    <td><%= product.category1 %></td>
    <td><%= product.category2 %></td>
    <td><%= product.category3 %></td>
    <td><%= product.category4 %></td>
    <td><%= product.category5 %></td>
    <td><%= product.category6 %></td>
    <td><%= product.category7 %></td>
    <td><%= product.category8 %></td>
    <td><%= product.category9 %></td>
    <td><%= product.category10 %></td>
    <td><%= product.publish %></td>
    <td><%= product.monitored %></td>
    <td><%= product.barcode %></td>
    <td><%= product.is_service %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

