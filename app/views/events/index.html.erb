<h1>Listing events</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Parent class</th>
    <th>Parent</th>
    <th>Parent name</th>
    <th>Child class</th>
    <th>Children</th>
    <th>Date</th>
    <th>Amount</th>
    <th>Detail1</th>
    <th>Detail2</th>
    <th>Detail3</th>
    <th>Is cancelled</th>
    <th>Checkcleardate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.type %></td>
    <td><%= event.parent_class %></td>
    <td><%= event.parent_id %></td>
    <td><%= event.parent_name %></td>
    <td><%= event.child_class %></td>
    <td><%= event.children_id %></td>
    <td><%= event.date %></td>
    <td><%= event.amount %></td>
    <td><%= event.detail1 %></td>
    <td><%= event.detail2 %></td>
    <td><%= event.detail3 %></td>
    <td><%= event.is_cancelled %></td>
    <td><%= event.checkcleardate %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

