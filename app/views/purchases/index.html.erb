<% @purchases.each do |purchase| %>
  <tr>
    <td><%= purchase.pono %></td>
    <td><%= purchase.invno %></td>
    <td><%= purchase.total %></td>
    <td><%= purchase.tax %></td>
    <td><%= purchase.vendor_id %></td>
    <td><%= purchase.vendor_name %></td>
    <td><%= purchase.terms_id %></td>
    <td><%= purchase.employee_id %></td>
    <td><%= purchase.template_id %></td>
    <td><%= purchase.date %></td>
    <td><%= purchase.datereceived %></td>
    <td><%= purchase.duedate %></td>
    <td><%= purchase.vendor_invoice %></td>
    <td><%= purchase.discrate %></td>
    <td><%= purchase.discamt %></td>
    <td><%= purchase.status %></td>
    <td><%= purchase.type %></td>
    <td><%= purchase.cash %></td>
    <td><%= purchase.cheque %></td>
    <td><%= purchase.credit %></td>
    <td><%= purchase.chequeno %></td>
    <td><%= purchase.chequedate %></td>
    <td><%= purchase.balance %></td>
    <td><%= purchase.chequedata %></td>
    <td><%= link_to 'Show', purchase %></td>
    <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
    <td><%= link_to 'Destroy', purchase, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

