<h1>Listing purchase_details</h1>

<table>
  <tr>
    <th>Purchase</th>
    <th>Description</th>
    <th>Qty</th>
    <th>Price</th>
    <th>Total</th>
    <th>Tax</th>
    <th>Product</th>
    <th>Barcode</th>
    <th>Discrate</th>
    <th>Discamt</th>
    <th>Is cancelled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @purchase_details.each do |purchase_detail| %>
  <tr>
    <td><%= purchase_detail.purchase_id %></td>
    <td><%= purchase_detail.description %></td>
    <td><%= purchase_detail.qty %></td>
    <td><%= purchase_detail.price %></td>
    <td><%= purchase_detail.total %></td>
    <td><%= purchase_detail.tax %></td>
    <td><%= purchase_detail.product_id %></td>
    <td><%= purchase_detail.barcode %></td>
    <td><%= purchase_detail.discrate %></td>
    <td><%= purchase_detail.discamt %></td>
    <td><%= purchase_detail.is_cancelled %></td>
    <td><%= link_to 'Show', purchase_detail %></td>
    <td><%= link_to 'Edit', edit_purchase_detail_path(purchase_detail) %></td>
    <td><%= link_to 'Destroy', purchase_detail, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

