<table>
  <tr>
    <th>Name</th>
    <th>Tin no</th>
    <th>Address</th>
    <th>Phone1</th>
    <th>Phone2</th>
    <th>Faxnum</th>
    <th>Email</th>
    <th>Note</th>
    <th>Rep</th>
    <th>Repno</th>
    <th>Rep2</th>
