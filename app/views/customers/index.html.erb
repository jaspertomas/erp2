<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.name %></td>
    <td><%= customer.tin_no %></td>
    <td><%= customer.address %></td>
    <td><%= customer.phone1 %></td>
    <td><%= customer.phone2 %></td>
    <td><%= customer.faxnum %></td>
    <td><%= customer.email %></td>
    <td><%= customer.note %></td>
    <td><%= customer.rep %></td>
    <td><%= customer.repno %></td>
    <td><%= customer.rep2 %></td>
    <td><%= customer.rep2no %></td>
    <td><%= customer.taxitem %></td>
    <td><%= customer.notepad %></td>
    <td><%= customer.salutation %></td>
    <td><%= customer.is_suki %></td>
    <td><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

