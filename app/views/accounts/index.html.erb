<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Account type</th>
    <th>Account category</th>
    <th>Is special</th>
    <th>Currentqty</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.code %></td>
    <td><%= account.name %></td>
    <td><%= account.account_type_id %></td>
    <td><%= account.account_category_id %></td>
    <td><%= account.is_special %></td>
    <td><%= account.currentqty %></td>
    <td><%= account.date %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

